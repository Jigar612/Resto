<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp">

    <TextView
        android:id="@+id/lst_tv_item_name"
        android:layout_width="120dp"
        android:layout_marginRight="40dp"
        android:text="Panir bhurji"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lst_tv_item_price"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="300"
        android:layout_marginRight="40dp"/>
    <TextView
        android:id="@+id/lst_tv_item_qty"
        android:layout_width="32dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"/>
    <TextView
        android:id="@+id/lst_tv_item_total"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="40dp"/>
    </LinearLayout>
        <TextView
            android:id="@+id/lst_tv_note"
            android:layout_width="wrap_content"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorNote"
            android:layout_height="wrap_content" />
    </LinearLayout>